{
  "embedding": {
    "model_name": "sentence-transformers/all-MiniLM-L6-v2",
    "device": "cpu",
    "batch_size": 32
  },
  "chunking": {
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "separators": [
      "\n\n",
      "\n",
      " ",
      ""
    ]
  },
  "vector_store": {
    "db_path": "./data/vector_db",
    "table_name": "documents",
    "similarity_threshold": 0.7
  },
  "processing": {
    "max_file_size_mb": 100,
    "supported_extensions": [
      ".pdf",
      ".docx",
      ".md",
      ".txt"
    ],
    "extract_highlights": true
  },
  "readwise": {
    "preserve_formatting": true,
    "extract_metadata": true,
    "priority_boost": 0.1
  },
  "search": {
    "max_results": 50,
    "min_similarity": 0.5,
    "boost_recent": true,
    "source_boosts": {
      "pdf_boost": 0.02,
      "docx_boost": 0.02,
      "markdown_notes_boost": 0.01,
      "readwise_boost": 0.01,
      "note_boost": 0.02,
      "tag_boost_per_tag": 0.005,
      "max_tag_boost": 0.02
    },
    "ranking_weights": {
      "base_similarity": 1.0,
      "readwise_boost": 0.1,
      "recency_boost": 0.05,
      "keyword_boost": 0.15,
      "length_penalty": 0.05,
      "source_boost": 0.05
    },
    "recency_boosts": {
      "very_recent_days": 7,
      "very_recent_boost": 0.1,
      "recent_days": 30,
      "recent_boost": 0.05,
      "somewhat_recent_days": 90,
      "somewhat_recent_boost": 0.02
    },
    "length_preferences": {
      "optimal_min": 100,
      "optimal_max": 500,
      "optimal_boost": 0.02,
      "good_min": 50,
      "good_max": 1000,
      "good_boost": 0.01,
      "too_short_penalty": -0.02,
      "too_long_threshold": 2000,
      "too_long_penalty": -0.01
    },
    "keyword_matching": {
      "min_word_length": 3,
      "exact_word_boost": 0.02,
      "phrase_match_boost": 0.05,
      "max_keyword_boost": 0.2
    },
    "suggestion_terms": [
      "productivity",
      "focus",
      "learning",
      "knowledge",
      "management",
      "notes",
      "research",
      "analysis",
      "strategy",
      "planning"
    ]
  }
}